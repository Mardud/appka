<h1>Editing Goal</h1>

<%= form_for :goal, url: goal_path(@goal), method: :patch do |f| %>
    <% if @goal.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@goal.errors.count, "error") %> prohibited
            this post from being saved:</h2>
          <ul>
            <% @goal.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
    <p>
      <%= f.label :name %><br>
      <%= f.text_field :name %>
    </p>

    <p>
      <%= f.label :cycle %><br />
      <%= f.select :cycle, (1..@goal.cycle) %>
    </p>

    <p>
      <%= f.label "Start" %> <br />
      <%= f.check_box :start %> <br />
    </p>

    <p>
      <%= f.submit %>
    </p>
<% end %>