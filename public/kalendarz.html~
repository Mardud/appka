<script>
var current_user = ''
var token
</script>

<script id="dane_user">
$(document).ready(function(){
$.ajax({
  url: 'http://localhost:3000/users/current',
  type: 'GET',
  dataType: 'json',
  success: function(data) {
    current_user = data.id
    token = data.csrfToken
  }
});
});

</script>


<script>

$(document).ready(function(){
  $('#zalButton').click(function() {
$.ajax({
  url: 'http://localhost:3000/goals',
  type: 'GET',
  dataType: 'json',
  success: function(data) {
    $('body').append(token)
  }
});

});
});
</script>


